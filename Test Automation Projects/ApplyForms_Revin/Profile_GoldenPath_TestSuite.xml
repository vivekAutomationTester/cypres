          <!--        22.Profile - Unavailability Calendar-->
          <class name="tests.profile.UnavailabilityCalendarTests"/>

          <!--        23.Profile - Update Profile Page-->
          <class name="tests.profile.UpdateProfilePageTests"/>

          <!--        24.Profile - Workload-->
          <class name="tests.profile.WorkloadPageTests"/>

      </classes>

  </test>
</suite>
